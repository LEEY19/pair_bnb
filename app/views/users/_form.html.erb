
<div class="text-field">
  <%= form.label :"Upload Avatar" %>
  <%= form.file_field :avatar, multiple: false, class:"form-control" %>
</div>

<div class="text-field">
  <%= form.label :"First Name" %>
  <%= form.text_field :first_name, type: 'text', class:"form-control" %>
</div>

<div class="text-field">
  <%= form.label :"Last Name" %>
  <%= form.text_field :last_name, type: 'text', class: "form-control" %>
</div>

<div class="text-field">
  <%= form.label :birthday %>
  <%= form.date_select :birthday, type: 'date', class: "form-control" %>
</div>

<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', class: "form-control" %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password, class: "form-control" %>
</div>
