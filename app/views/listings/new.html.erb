<div class="container">
  <h1>New Listing</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= simple_form_for @listing do |f| %>
          <%= f.input :images, as: :file, input_html: { multiple: true } %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :state %>
          <%= f.input :address %>
          <%= f.input :pet %>
          <%= f.input :smoking %>
          <%= f.input :max_guest %>
          <%= f.input :price %>
          <%= f.input :tag_list %>
          <%= f.button :submit %>
        <% end %>
    </div>
  </div>
</div>